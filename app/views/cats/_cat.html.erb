<tr id="<%= dom_id cat %>" class="flex hover">
  <td class="grow"><%= cat.id %></td>
  <td class="grow"><%= cat.name %></td>
  <td class="grow"><%= cat.age %></td>

  <td>
  <% if action_name != "show" %>
    <%= link_to "Show this cat", cat, class: 'btn btn-primary' %>
    <%= link_to 'Edit this cat', edit_cat_path(cat), class: 'btn btn-secondary' %>
  <% end %>
  </td>
</tr>
